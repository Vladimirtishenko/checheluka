.a-chat-container
	width 250px
	height 100%
	position fixed
	background greys
	border-left 5px solid #e8065a
	top 0
	right -250px
	z-index 999
	transition all .7s ease

.-animate-chat
	right 0px
	
.a-chat-container__button
	position absolute
	left -78px
	transform rotate(270deg)
	top 50%
	margin-top -55px
	background pink
	padding 10px 15px
	color #fff
	white-space nowrap
	text-transform uppercase
	font-size 12px
	cursor pointer
	width 115px
	text-align center